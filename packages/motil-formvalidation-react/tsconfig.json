{
    "compilerOptions": {
        "outDir": "./dist/",
        "declaration": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./typings/*",
            "./node_modules/@types/**"
        ],
        "baseUrl": "./",
		"paths" : {
			"lib/*": [ "src/lib/*" ],
			"*" : ["typings/*"]
		},
        "lib": [
            "dom",
            "es6",
            "es2015.iterable"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
