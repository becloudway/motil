{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "lint:fix": "tslint --project tsconfig.json -c tslint.json --fix",
    "build": "npx lerna run build",
    "bootstrap": "npx lerna bootstrap",
    "deploy": "./deploy.sh"
  },
  "devDependencies": {
    "husky": "^1.2.1",
    "lerna": "^3.3.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "COUNT=`git diff --cached --name-only | grep -E \".ts[x]?$\" | wc -L`; if [ $COUNT -ne 0 ]; then npm run lint:fix -- `git diff --cached --name-only | grep -E \".ts[x]?$\" | tr '\n' ' '`; fi;"
    }
  }
}
